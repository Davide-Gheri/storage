{
  "name": "@davidegheri/storage",
  "version": "1.1.0",
  "description": "small browser storage API library",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "tsc": "tsc",
    "tslint": "tslint",
    "build": "tsc --project .",
    "lint": "tslint --project . --fix",
    "test": "jest",
    "test:coveralls": "npm run test -- --coverage",
    "coveralls": "cat ./coverage/lcov.info | coveralls",
    "preversion": "npm run lint && npm run test",
    "version": "npm run build",
    "postversion": "git push --follow-tags"
  },
  "author": {
    "name": "Davide Gheri",
    "email": "davide@davidegheri.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Davide-Gheri/storage.git"
  },
  "license": "MIT",
  "devDependencies": {
    "@types/ejs": "^2.6.0",
    "@types/node": "^10.5.3",
    "coveralls": "^3.0.2",
    "jest": "^23.6.0",
    "ts-jest": "^23.1.4",
    "ts-loader": "^4.4.2",
    "tslint": "^5.11.0",
    "tslint-config-airbnb": "^5.9.2",
    "typescript": "^2.9.2"
  },
  "jest": {
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(js|ts)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/**/*.ts"
    ],
    "coverageReporters": ["lcov", "text", "text-summary"]
  }
}
